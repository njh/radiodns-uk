<% content_for :page_title, @service.name %>

<h1><%= @service.name %></h1>

<div class="row">
  <div class="col-6">
    <p>
      <%= @service.description %>
    </p>

    <% unless @service.links.empty? %>
    <h3>Links</h3>
    <ul>
      <% @service.links.each do |link| %>
        <li><a href="<%= link.uri %>"><%= link.description || link.uri %></a></li>
      <% end %>
    </ul>
    <% end %>

    <% unless @service.genres.empty? %>
    <h3>Genres</h3>
    <ul>
      <% @service.genres.each do |genre| %>
        <li><abbr title="<%= genre.urn %>"><%= genre.name %></abbr></li>
      <% end %>
    </ul>
    <% end %>

    <% unless @service.dab_bearers.empty? %>
    <h3>DAB Multiplexes</h3>
    <table class="table table-sm table-responsive">
      <thead>
        <tr>
          <th scope="col">Bearer ID</th>
          <th scope="col">Multiplex Name</th>
          <th scope="col">Block</th>
        </tr>
      </thead>

      <tbody>
        <% @service.dab_bearers.each do |bearer| %>
          <tr>
            <td>
              <%= bearer.uri %>
            </td>
            <td>
              <% unless bearer.multiplex.nil? %>
                <a href="<%= bearer.multiplex.path %>"><%= bearer.multiplex.name %></a>
              <% else %>
                Unknown
              <% end %>
            </td>
            <td>
              <% unless bearer.multiplex.nil? %>
                <%= bearer.multiplex.block %>
              <% else %>
                Unknown
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>

    <% unless @service.fm_bearers.empty? %>
    <h3>FM Transmitters</h3>
    <table class="table table-sm table-responsive">
      <thead>
        <tr>
          <th scope="col">Bearer ID</th>
          <th scope="col">Frequency</th>
          <th scope="col">Transmitters</th>
        </tr>
      </thead>

      <tbody>
        <% @service.fm_bearers.each do |bearer| %>
          <tr>
            <td>
              <%= bearer.uri %>
            </td>
            <td>
              <%= bearer.frequency %> MHz
            </td>
            <td>
              <ul class="list-unstyled">
                <% bearer.transmitters.each do |transmitter| %>
                  <li><a href="<%= transmitter.path %>"><%= transmitter.name %></a></li>
                <% end %>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>

  <div class="col-6">
    <% @service.logos_set.each do |logo| %>
      <div style="margin-bottom: 2em">
      <h5><%= logo.size %></h5>
        <img class="img-thumbnail"
             src="<%= logo.url %>"
             width="<%= logo.width %>"
             height="<%= logo.height %>"
             alt="<%= @service.name %> <%= logo.size %> Logo"
        />
      </div>
    <% end %>
  </div>

</div>

<div class="row">
  <p>
    <b>RadioDNS FQDN:</b>
    <a href="/authorities/<%= @service.authority.fqdn %>"><%= @service.authority.fqdn %></a>
  </p>
</div>
