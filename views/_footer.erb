   <% unless @alternatives.nil? %>
   <div class="alternative-formats">
    Alternative formats: 
    <% basename = File.basename(request.path) %>
    <% @alternatives.each do |alt| %>
      <a href="<%= basename %>.<%= alt.gsub(/\W+/, '') %>" class="format-button align-middle"><%= alt.upcase %></a>
    <% end %>
   </div>
   <% end %>

